                                    <td>
                                        <%= row.nome %>
                                    </td>
                                    <td>
                                        <%= row.dispositivo %>
                                    </td>
                                    <td>
                                        <%= row.latitude %>
                                    </td>
                                    <td>
                                        <%= row.longitude %>
                                    </td>
                                    <td>
                                        <%= row.data %>
