<%- include('layout/header') %>
    <div class="container">
        <div class="row">
            <div class="card shadow">
                <div class="card-body p-4"></div>
                <div class="span4">
                    <h2>Login</h2>
                    <form action="../auth/login" method="post">
                        <div class="mb-3">
                            <label for="email">E-mail</label>
                            <input type="text" name="email" class="form-control form-control-lg" placeholder="Digite seu email" required/>
                        </div>
                        <div class="mb-3">
                            <label for="password">Password</label>
                            <input type="password" name="password" class="form-control form-control-lg" placeholder="Digite sua senha" required/>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Logar" class="btn btn-dark btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
    <%- include('layout/footer') %>